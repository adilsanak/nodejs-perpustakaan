                            bookCodeTemp: bookCodeTemp,
                            memberCode: memberCode,
                        }),
                    });
                    const content = await rawResponse.json();
                    if (content['success']) {
                        window.location.href = 'http://localhost:8080/loan/new/' + memberCode;
                    } else {
                        alert('There is something wrong!');
                    }
                })();
            }

