<html>
    <head>
        <title>Loan Report</title>
        <div style="padding: 4mm" align="center">
            <label style="font-size: 25px">Sistem Informasi Perpustakaan</label><br />
            <label style="font-size: 19px">Komp. Parupuk Raya Blok H.6 Parupuk Tabing, Padang Sumatera Barat</label>
        </div>
        <hr />
        <hr />
        <div style="padding: 20px 0 10px 0; font-size: 18px" align="center">
            Laporan Data Peminjaman
            <br /><br />
        </div>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

            html,
            body {
                font-family: 'Poppins';
            }
            .table1 {
                color: #444;
                border-collapse: collapse;
                width: 90%;
                border: 1px solid #f2f5f7;
            }

            hr {
                width: 80%;
            }

            .table1,
            th,
            td {
                padding: 8px 20px;
                text-align: center;
            }

            .table1 tr:hover {
                background-color: #f5f5f5;
            }

            .table1 tr:nth-child(even) {
                background-color: #f2f2f2;
            }
        </style>
    </head>

    <body>
        <table border="1" width="100%" class="table1" align="center">
            <thead>
                <tr>
                    <th>Loan Date</th>
                    <th>Return Date</th>
                    <th>Book</th>
                    <th>Member</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                <% loan.forEach(function(data) { %>
                <tr>
                    <td><%= data.t_peminjaman %></td>
                    <td><%= data.t_kembali %></td>
                    <td><%= data.judul %></td>
                    <td><%= data.nama_anggota %></td>
                    <td><%= data.name%></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </body>
</html>
<script type="text/javascript">
    window.onload = function () {
        window.print();
    };
</script>
